<div class="the-box sign-up-box">
	<h3>Sign up</h3>
	
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= render "users/shared/error_messages", resource: resource %>
	
	  <div class="field">
		<%= f.label :email %><br />
		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'box-type' %>
	  </div>
	
	  <div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password, autocomplete: "new-password", class: 'box-type' %>
	  </div>
	
	  <div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'box-type' %>
	  </div>
	
	  <div class="actions">
		<%= f.submit "Sign up", class: 'sign-btn' %>
	  </div>
	<% end %>
	
	<%= render "users/shared/links" %>
</div>